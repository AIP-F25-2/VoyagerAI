# VoyagerAI Environment Configuration

# Database Configuration
# Replace with your PostgreSQL connection details
DATABASE_URL=postgresql://postgres:1234@localhost:5432/voyagerai

# Alternative PostgreSQL connection formats:
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
# DATABASE_URL=postgresql+psycopg2://user:pass@localhost:5432/dbname

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# API Keys (get these from respective developer portals)
TICKETMASTER_API_KEY=your_ticketmaster_api_key_here
EVENTBRITE_API_KEY=your_eventbrite_api_key_here

# Scraping Configuration
SCRAPING_TIMEOUT=60
MAX_EVENTS_PER_CITY=100

# MongoDB Configuration (optional - for external events)
MONGO_URI=mongodb://localhost:27017/voyagerai
MONGO_DB=voyagerai

# Server Configuration
HOST=0.0.0.0
PORT=5000
